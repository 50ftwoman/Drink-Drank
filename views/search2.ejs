<% for (var i=0; i < 5; i++) { %>
<!-- <a href="/barinfo"> -->
  <div class="container-fluid">
     <div class="row">
         <div class="col-md-6">
           <img class="bar-results-image" src="<%= bar[i].image_url %>" alt="Bar image">
         </div>
         <div class="col-md-6">
           <h4><%= bar[i].name %></h4>
           <br>
           <h4><%= bar[i].location.city %></h4>
         </div>

      </div>
  </div>
  <% if (user) { %> 
    <form action="/bar" method="POST">
      <input type="hidden" value="<%= bar[i].name %>" name="name">
      <input type="hidden" value="<%= bar[i].image_url %>" name="image_url">
      <input type="hidden" value="<%= bar[i].location.city %>" name="location">
      <input type="submit" value="Add Bar!">
    </form>
  <% } %>

<hr>
<% } %>
